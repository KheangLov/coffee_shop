<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="wrapper clearfix">
        <aside id="mySidenav" class="sidebar">
            <div class="sidebar-header text-center">
                <h3 class="site-name">Bedtimestories</h3>
            </div>
            <ul class="nav nav-menu">
                <li class="@(ViewBag.App_Title == "Dashboard" ? "active" : "")">
                    <a href="/home/dashboard">
                        <i class="fa fa-tachometer"></i>Dashboard
                    </a>
                </li>
                <li class="@(ViewBag.App_Title == "Students" ? "active" : "")">
                    <a href="/student/students">
                        <i class="fa fa-user"></i>Students
                    </a>
                </li>
                <li class="@(ViewBag.App_Title == "Groups" ? "active" : "")">
                    <a href="/group/groups">
                        <i class="fa fa-table"></i>Groups
                    </a>
                </li>
            </ul>
        </aside>
        <div class="main-wrapper">
            @Html.Partial("_Navbar")
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>  
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
